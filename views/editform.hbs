<div class="container">
<h2 style="padding-top: 50px;">{{title}}</h2>
<hr/>
<div class="row">
    <div class="col-md-6">
        <form action="/products/edit/{{product.id}}" method="post">
            <div class="form-group">
                <input type="text"  name="product_name" class="form-control" value="{{product.product_name}}" placeholder="Product Name:"/>
            </div>
            <div class="form-group">
                <input type="text"  name="sku" class="form-control" value="{{product.sku}}" placeholder="SKU:"/>
            </div>
            <div class="form-group">
                <input type="text"  name="price" class="form-control" value="{{product.price}}" placeholder="Price:"/>
            </div>
            <div class="form-group">                                 
                <button class="btn btn-info">Save Product</button>
            </div>

        </form>
    </div>
</div>
</div>

